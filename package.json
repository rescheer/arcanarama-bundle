{
  "name": "arcanarama-bundle",
  "version": "0.11.0",
  "description": "A NodeCG Bundle built for the Arcanarama Twitch livestream.",
  "homepage": "https://github.com/rescheer/arcanarama-bundle",
  "author": {
    "name": "Robert Scheer",
    "email": "robertedwinscheer@gmail.com",
    "url": "https://github.com/rescheer"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "nodecg-bundle",
    "twitch-bot"
  ],
  "prettier": {
    "singleQuote": true
  },
  "browserlist": "last 2 chrome versions",
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "assetCategories": [
      {
        "name": "giveaway",
        "title": "Utility - Giveaways",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "mp4",
          "ogg",
          "webm"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "Giveaways",
        "title": "Giveaways",
        "file": "giveawayController.html",
        "width": 3,
        "headerColor": "#2f3a4f"
      },
      {
        "name": "Chat",
        "title": "Chat",
        "file": "chatBox.html",
        "width": 4,
        "headerColor": "#2f3a4f"
      },
      {
        "name": "Vibes",
        "title": "Vibes",
        "file": "vibeCheckResults.html",
        "fullbleed": true,
        "headerColor": "#2f3a4f"
      }
    ],
    "graphics": [
      {
        "file": "utilityGraphic.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "bundleDependencies": {
      "nodecg-io-twitch-chat": "^0.2.0"
    }
  },
  "scripts": {
    "watch": "parcel watch --public-url ./",
    "build": "parcel build --public-url ./",
    "start": "npm --prefix ./../../ run start"
  },
  "targets": {
    "dashboard": {
      "source": [
        "src/dashboard/giveawayController.html",
        "src/dashboard/chatBox.html",
        "src/dashboard/vibeCheckResults.html"
      ],
      "context": "browser",
      "distDir": "dashboard/"
    },
    "graphics": {
      "source": [
        "src/graphics/utilityGraphic.html"
      ],
      "context": "browser",
      "distDir": "graphics/"
    },
    "backend": {
      "source": "src/extension/index.js",
      "context": "node",
      "outputFormat": "commonjs",
      "scopeHoist": false,
      "distDir": "extension/"
    }
  },
  "repository": "https://github.com/rescheer/arcanarama-bundle.git",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "parcel": "^2.8.3",
    "path-browserify": "^1.0.1",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.0",
    "axios": "^1.3.4",
    "beyond-importer": "^0.0.0",
    "flux": "^4.0.3",
    "gsap": "^3.10.4",
    "nodecg-io-core": "^0.2.0",
    "nodecg-io-twitch-chat": "^0.2.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
