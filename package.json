{
  "name": "arcanarama-bundle",
  "version": "0.0.0",
  "description": "A NodeCG Bundle built for the Arcanarama Twitch livestream.",
  "homepage": "https://github.com/rescheer/arcanarama-bundle",
  "author": {
    "name": "Robert Scheer",
    "email": "robertedwinscheer@gmail.com",
    "url": "https://github.com/rescheer"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "nodecg-bundle"
  ],
  "prettier": {
    "singleQuote": true
  },
  "browserlist": "last 2 chrome versions",
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "assetCategories": [
      {
        "name": "assetUtilGiveaways",
        "title": "Utility - Giveaways",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "assetUtilCharacters",
        "title": "Utility - Character Cards",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "assetUtilSponsors",
        "title": "Utility - Sponsors",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "assetUtilMisc",
        "title": "Utility - Misc",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "UtilitySpace",
        "title": "UtilitySpace",
        "width": 6,
        "file": "UtilitySpace.html",
        "headerColor": "#525F78",
        "workspace": "Main"
      },
      {
        "name": "assetManager",
        "title": "Asset Manager",
        "width": 4,
        "file": "assetManager.html",
        "headerColor": "#525F78",
        "workspace": "Settings"
      },
      {
        "name": "editUtilItemDialog",
        "title": "Edit Utility Item",
        "width": 2,
        "dialog": true,
        "dialogButtons": [
          {
            "name": "save",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ],
        "file": "dialog/editUtilItemDialog.html"
      }
    ],
    "graphics": [
      {
        "file": "utilityGraphic.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build"
  },
  "targets": {
    "frontend": {
      "source": "src/dashboard/index.html",
      "distDir": "./dashboard"
    },
    "backend": {
      "source": "src/extension/index.js",
      "distdir": "./extension"
    }
  },
  "repository": "https://github.com/nodecg/nodecg.git",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "gsap": "^3.10.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
